{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/style1.css') }}">
{% endblock %}

{% block body %} 
{% include "includes/navsecondaire.html.twig" %}
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem; border: none; overflow: hidden; box-shadow: 0 0 10px grey;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="images/image.png"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
  <!-- connexion -->      
<form method="post">
    {% if error %}
        <div class="alert alert-danger"> Erreur d'authentification </div>
      {% endif %}
      {% if app.user %}
              <div class="alert alert-info" role="alert">
      Vous êtes connecté en tant que {{ app.user.name }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
              </div>
          {% endif %}

<div class="d-flex align-items-center mb-3 pb-1">
                   
                
                </div>
                
<span class="h1 fw-bold mb-0" style="color: #18534f;"><b>Connectez-vous</b></span><br><br>
    <div class="form-outline mb-4">
    
    <input type="email" id="form2Example17" value="{{last_username}}" class="form-control form-control-lg" name="email" placeholder="Email"/>
    </div>

       <div class="form-outline mb-4">
      
    <input type="password" id="form2Example27" class="form-control form-control-lg" name="password" placeholder="Mot de passe"/>
     </div>
<input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"/>

 <div class="pt-1 mb-4">
<button class="btn" type="submit" style="border: 1px solid #18534f; background-color: #18534f; color: white;">Connexion</button>
        </div>   
    <span class="login__account">Vous n'avez pas de compte ?</span>
    <span class="login__signin" id="sign-up"></span>
   <a href="{{ path('app_register') }}"
style="color: #393f81;">S'inscrire ici</a></p>
</div>

                 
</form>
</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
